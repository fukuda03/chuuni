  <!-- +++++ Welcome Section +++++ -->
  <div id="ww">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-lg-offset-2 centered">
          <h1>タイトル</h1>
          <p>ここに記事が入りますここに記事が入りますここに記事が入りますここに記事が入りますここに記事が入りますここに記事が入ります</p>
          <div class="col-md-offset-3 col-md-3">
            <%= link_to 'Sign up', new_user_path, class: 'btn btn-block btn-white' %>
          </div>
          <div class="col-md-3">
            <%= link_to 'Log in', login_path,class: 'btn btn-block btn-white' %>
          </div>

        </div>
        <!-- /col-lg-8 -->
      </div>
      <!-- /row -->
    </div>
    <!-- /container -->
  </div>
  <!-- /ww -->
  <% @topics.each do |topic| %>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="topic-index-single">
          <h2 class="topic-author">
            <%= topic.user.name %>
          </h2>
          <%= image_tag topic.image.url %>
          <%= link_to favorites_path(topic_id: topic.id), method: :post do %>
            <%= image_tag 'heart-black.png', class: 'topic-index-icon' %>
          <% end %>
          <%= topic.favorite_users.count %>

          <%= image_tag 'comment.png', class: 'topic-index-icon' %>
          <p class="topic-text">
            <%= topic.description %>
          </p>
        </div>
      </div>
    </div>
  <% end %>



